@model InsureApp.Models.Users

@{
	ViewData["Title"] = "Delete";
}

<h3 class="text-danger">Jste si jisti že chcete uživatele odstranit?</h3>
<div class="row">
	<div class="col-md-4">
		<img src="~/images/avatar.png" class="img-fluid" width="150" />
	</div>
	<div class="col-md-4">
		<dl class="row">
			<dd class="col-sm-10 fw-bold fs-2">
				@Html.DisplayFor(model => model.Name) @Html.DisplayFor(model => model.Surname)
			</dd>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Address)
			</dd>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.City)
			</dd>

			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Zip)
			</dd>
		</dl>
	</div>
	<div class="col-md-4 mt-5">
		<dl class="row">
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Email)
			</dd>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Phone)
			</dd>
		</dl>
	</div>

</div>

<form asp-action="Delete">
	<input type="hidden" asp-for="Id" />
	<input type="submit" value="Delete" class="btn btn-danger" />
	<a asp-action="Index" class="btn btn-primary">Zpět</a>
</form>
</div>
